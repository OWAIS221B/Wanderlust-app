<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Wanderlust</title>
  </head>
  <%layout('/layouts/boilerplate')%>
  <h3>Cretae a new listing</h3>
  <form method="POST" action="/listing">
    <div class="mb-3">
      <lable for="title" class="form-label">Title</lable>
      <input
        name="listing[title]"
        placeholder="enter title"
        type="text"
        class="form-control"
      />
    </div>
    <div class="mb-3">
      <lable for="description" class="form-label">Description</lable>
      <textarea name="listing[description]" class="form-control"></textarea>
    </div>

    <div class="mb-3">
      <lable for="image" class="form-label">Image Link</lable>
      <input
        name="listing[image]"
        placeholder="enter image URL/Link"
        type="text"
        class="form-control"
      />
    </div>

    <div class="mb-3">
      <lable for="price" class="form-label">Price</lable>
      <input
        name="listing[price]"
        placeholder="enter enter price"
        type="number"
        class="form-control"
      />
    </div>

    <div class="mb-3">
      <lable for="country" class="form-label">Country</lable>
      <input
        name="listing[country]"
        placeholder="enter country"
        type="text"
        class="form-control"
      />
    </div>

    <div class="mb-3">
      <lable for="location" class="form-label">Location</lable>
      <input
        name="listing[location]"
        placeholder="enter location"
        type="text"
      />
    </div>

    <br /><br />
    <button class="btn btn-dark">Add</button>
  </form>
</html>
