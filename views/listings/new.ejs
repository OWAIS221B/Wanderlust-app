<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Wanderlust</title>
  </head>
  <%layout('/layouts/boilerplate')%>
  <div class="row">
    <div class="col-8 offset-2">
      <br /><br />
      <h3>Create a New Listing</h3>
      <form method="POST" action="/listing" novalidate class="needs-validation">
        <div class="mb-3">
          <lable for="title" class="form-label">Title</lable>
          <input
            name="listing[title]"
            placeholder="enter title"
            type="text"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3">
          <lable for="description" class="form-label">Description</lable>
          <textarea
            name="listing[description]"
            class="form-control"
            required
          ></textarea>
        </div>

        <div class="mb-3">
          <lable for="image" class="form-label">Image Link</lable>
          <input
            name="listing[image]"
            placeholder="enter image URL/Link"
            type="text"
            class="form-control"
          />
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <lable for="price" class="form-label">Price</lable>
            <input
              name="listing[price]"
              placeholder="enter enter price"
              type="number"
              class="form-control"
              required
            />
          </div>

          <div class="mb-3 col-md-8">
            <lable for="country" class="form-label">Country</lable>
            <input
              name="listing[country]"
              placeholder="enter country"
              type="text"
              class="form-control"
              required
            />
          </div>
        </div>

        <div class="mb-3">
          <lable for="location" class="form-label">Location</lable>
          <input
            name="listing[location]"
            placeholder="enter location"
            type="text"
            \
            class="form-control"
            required
          />
        </div>

        <br /><br />
        <button class="btn btn-dark add-btn">Add</button>
        <br /><br />
      </form>
    </div>
  </div>
</html>
